{
  "compilerOptions": {
    "target": "ES2015",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "lib",
    "moduleResolution": "node",
    //"resolveJsonModule": true,
    "isolatedModules": true,
    //"noEmit": true,
    "jsx": "react",
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
